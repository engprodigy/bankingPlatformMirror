@{
    ViewData["Title"] = "Retail Operation Setup";
}
@section title{
    <span class="title">@ViewData["Title"]</span>
}
@section pagedescription{
    <span class="title f24px">Teller Posting</span>
}
<div class="card">

    <div class="card-header ">
        <h4 class="card-title">Teller Posting - <small class="description">Tills on use</small></h4>
    </div>


    <div class="card-body">
        <div id="tellerlogin-toolbar">
            <h7>This Till has been assigned for operation</h7>
        </div>

        <table id="tellerLogutTable" data-toggle="table"
               data-url="@Url.Action("listTellerLogin", "TellerAndTill")"
               data-search="true" class="data-table"
               data-toolbar="#tellerlogut-toolbar"
               data-search-align="right"
               data-show-pagination-switch="true"
               data-mobile-responsive="true"
               data-show-refresh="true"
               data-show-toggle="true"
               data-buttons-class="danger"
               data-unique-id="id">
            <thead>
                <tr>
                    <th data-field="ledgername" data-sortable="true">Till Account Name</th>
                    <th data-field="accountid">Till Account Number</th>

                    <th data-formatter="utilities.logoutFormatter"
                        data-align="center" data-width="5%">Logout</th>

                </tr>
            </thead>
        </table>

        

            <hr />

            <div class="row">
                <div class="col-sm-12 col-md-3">
                    <ul class="nav nav-pills nav-pills-danger nav-pills-icons flex-column" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#telleroperationposting" role="tablist">
                                <i class="now-ui-icons business_money-coins"></i>
                                Transfer
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#transfercharges" role="tablist">
                                <i class="now-ui-icons business_money-coins"></i>
                                Lodgement
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#reversalPrivilege" role="tablist">
                                <i class="now-ui-icons business_bulb-63"></i>
                                Vault Till Transfer
                            </a>
                        </li>




                    </ul>
                </div>
                <div class="col-sm-12 col-md-9 px-0">
                    <div class="tab-content">
                        <div class="tab-pane active" id="telleroperationposting">
                            @Html.Partial("_TellerOperationPosting")
                        </div>
                        <div class="tab-pane" id="transfercharges">
                            @Html.Partial("_TellerOperationLodgement")
                        </div>
                        @*<div class="tab-pane" id="reversalPrivilege">
                        @Html.Partial("_GrantReversalPrivilege")
                    </div>*@

                    </div>
                </div>
            </div>
        </div>
</div>

<!-- Classic Modal -->
<div class="modal fade" id="TellerUserLogout" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="now-ui-icons ui-1_simple-remove"></i>
                </button>
                @*<h2> <i class="now-ui-icons users_single-02"></i></h2>*@

                @*<h4 class="title title-up">Teller Operation</h4>*@
            </div>
            <div class="modal-body">
                <h4 class="title title-up"><center>Teller Operation</center></h4>
                <p><center>You are about to Logout From Teller Operation <br /> Please Proceed</center> </p>
            </div>
            <form id="frmtellerlogout">

                <input type="hidden" name="id" id="id" />
                <input type="hidden" name="companyid" id="companyid" />
                <input type="hidden" name="branchid" id="branchid" />
                <input type="hidden" name="ledgername" id="ledgername" />
                <input type="hidden" name="accountid" id="accountid" />

                <input type="hidden" name="closingbalance" id="closingbalance" />
                <input type="hidden" name="accountbalance" id="accountbalance" />
                <input type="hidden" name="tellerno" id="tellerno" />
                <input type="hidden" name="tellerlogindate" id="tellerlogindate" />
                <input type="hidden" name="tellerlogintime" id="tellerlogintime" />
                <input type="hidden" name="accountId" id="accountId" />

                <input type="hidden" name="username" id="username" />
                <input type="hidden" name="assignuser" id="assignuser" />
                <input type="hidden" name="isactive" id="isactive" />

            </form>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btntellerLogin" onclick="getTellerLogout()">Log Out</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <environment include="Development">
        <script src="~/js/modules/TellerPostingSp.js"></script>
        <script src="~/js/modules/Lodgement.js"></script>
        <script src="~/js/modules/VaultTillOperation.js"></script>
        <script src="~/js/plugins/Num2Words.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/modules/TellerPostingSp.min.js"></script>
        <script src="~/js/modules/Lodgement.min.js"></script>
        <script src="~/js/modules/VaultTillOperation.min.js"></script>
    </environment>
}